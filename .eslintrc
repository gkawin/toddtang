{
  "extends": [ "eslint:recommended", "standard", "standard-react" ],
  "plugins": [ "import" ],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "expect": true
  },
  "rules": {
    "no-console": "warn",
    "no-undef": "error",

    "import/named": "error",
    "import/namespace": "error"
  }
}
