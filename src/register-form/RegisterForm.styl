@require '../design/colors'

.register-form
  padding 20px
  width 500px
  margin 0 auto
  &__form-row
    margin-top 20px
    width 100%
    &:first-child
      margin-top 0

  &__form-input
    padding 10px
    font-size 16px
    width 100%
    border-radius 2px
    border 1px solid grey-500

  &__form-select
    width calc(100% + 24px)
    padding 6px 12px
    border 1px solid grey-500
    display inline-block
    height 34px
    font-size 16px

  &__advice
    margin-left 5px
    font-size 12px

  &__bank-account-label
    display block
    margin-top 20px
    font-size 18px
    font-weight 600

  &__validation-error
    font-size 12px
    color red-500

  &__button
    padding 10px
    border-radius 2px
    background-color teal-500
    border 0
    width calc(100% + 24px)
    font-size 16px
    cursor pointer
    color white
    font-weight 600
    outline 0
    &:hover
      background-color teal-700
