@require '../design/colors'

avatar-width = 45px
avatar-height = 45px
h = 45px
.member-top-nav
  height h
  left 0
  top 0
  right 0
  background-color grey-700
  text-align justify
  display flex
  justify-content space-between

  &__left
    height h
    align-content flex-start

  &__right
    height h
    align-content flex-end

  &__avatar
    max-width avatar-width
    max-height avatar-height
    width avatar-width
    height avatar-height
