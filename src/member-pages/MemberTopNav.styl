@require '../design/colors'

avatar-width = 45px
avatar-height = 45px

.member-top-nav
  height 45px
  left 0
  top 0
  right 0
  background-color grey-700

  &__left
    float left
    height 45px

  &__right
    float right
    height 45px

  &__clear
    clear both

  &__avatar
    max-width avatar-width
    max-height avatar-height
    width avatar-width
    height avatar-height
